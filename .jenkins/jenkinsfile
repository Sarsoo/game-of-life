pipeline {
    agent any

    stages {
        stage('Deploy') {
            when { branch 'master' }
            steps {
                script {
                    docker.withRegistry('https://git.sarsoo.xyz', 'git-registry-creds') {

                        docker.build("sarsoo/game-of-life:latest").push()
                    }
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}